<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex52Activity"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/view"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_span="4"
        android:text="숫자"
        android:layout_margin="10dp"
        android:gravity="right|bottom"
        android:padding="30dp"
        android:textSize="20sp"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">
        <TableRow>
            <Button
                android:id="@+id/bt7"
                android:layout_height="60dp"
                android:text="7"
                android:onClick="num"
                />
            <Button
                android:id="@+id/bt8"
                android:layout_height="60dp"
                android:text="8"/>
            <Button
                android:id="@+id/bt9"
                android:layout_height="60dp"
                android:text="9"/>
            <Button
                android:id="@+id/btplus"
                android:layout_height="60dp"
                android:text="+"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt4"
                android:layout_height="60dp"
                android:text="4"/>
            <Button
                android:id="@+id/bt5"
                android:layout_height="60dp"
                android:text="5"/>
            <Button
                android:id="@+id/bt6"
                android:layout_height="60dp"
                android:text="6"/>
            <Button
                android:id="@+id/btMinus"
                android:layout_height="60dp"
                android:text="-"/>

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt1"
                android:layout_height="60dp"
                android:text="1"/>
            <Button
                android:id="@+id/bt2"
                android:layout_height="60dp"
                android:text="2"/>
            <Button
                android:id="@+id/bt3"
                android:layout_height="60dp"
                android:text="3"/>
            <Button
                android:id="@+id/btMultiply"
                android:layout_height="60dp"
                android:text="*"/>

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt0"
                android:layout_height="60dp"
                android:text="0"/>
            <Button
                android:id="@+id/btC"
                android:layout_height="60dp"
                android:text="C"/>
            <Button
                android:id="@+id/btResult"
                android:layout_height="60dp"
                android:text="="/>
            <Button
                android:id="@+id/btDivide"
                android:layout_height="60dp"
                android:text="/"/>

        </TableRow>

    </TableLayout>
</LinearLayout>